alias gcf="git cf"
unalias glo 
alias glo="git lo" 
unalias gl 
function gl () {
  if git pull -ff "$@"; then
    return
  else 
    git rebase --abort
    if git pull "$@"; then
      return
    else 
      git rebase --abort
      git pull --rebase=false "$@"
    fi
  fi
} 
