{
  "languageserver": {
    "clangd": {
      "command": "/usr/local/opt/llvm/bin/clangd",
      "args": ["--background-index"],
      "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    },
    //"metals": {
      //    "command": "metals-vim",
      //    "rootPatterns": ["build.sbt"],
      //    "filetypes": ["scala", "sbt"]
      //},
      "flow": {
        "command": "/usr/local/bin/flow",
        "args": ["lsp"],
        "filetypes": ["javascript", "javascriptreact"],
        "initializationOptions": {},
        "requireRootPattern": true,
        "rootPatterns": [".flowconfig"]
      },
      "python": {
        "command": "python",
        "args": [
          "-mpyls",
          "-vv",
          "--log-file",
          "/tmp/lsp_python.log"
        ],
        "trace.server": "verbose",
        "filetypes": [
          "python"
        ],
        "settings": {
          "pyls": {
            "enable": true,
            "trace": {
              "server": "verbose"
            },
            "commandPath": "",
            "configurationSources": [
              "pycodestyle"
            ],
            "plugins": {
             "pyls_mypy": {
               "enabled": true,
               "live_mode":true
             }
            }
          }
        }
      }

  },
  "java.home": "/Library/Java/JavaVirtualMachines/openjdk-13.jdk/Contents/Home",
  "coc.preferences.formatOnType": true, 
  "coc.preferences.formatOnSaveFiletypes": ["javascript", "js", "html", "Markdown", "css", "scala"],
  "eslint.codeAction.autoFixOnSave" : true,

}
