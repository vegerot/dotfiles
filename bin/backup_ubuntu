#!/usr/bin/env bash

time sudo /root/.local/bin/duplicity backup / file:///mnt/nas/ubuntu-22.04/duplicity\
  --volsize=1024\
  --verbosity=5\
  --include=/root \
  --exclude=/sys --exclude=/run --exclude=/proc --exclude=/dev --exclude=/var/tmp --exclude=/tmp --exclude-regexp='^node_modules$' --exclude-regexp='^out$' --exclude-regexp='^build$' --exclude-regexp="cache$" \
  --include="/root/.cache/duplicity/" \
  --exclude-other-filesystems\
  --exclude-device-files\
  --exclude-if-present=.nobackup

# restore with `/root/.local/bin/duplicity restore --restore-time 1M --path-to-restore home/max/dotfiles/.zshrc file:///mnt/nas/ubuntu-22.04/duplicity/ /tmp/restoredzshrc2`

