#!/usr/bin/env sh

set -eau

clapstdin() {
	while read line; do
		for word in $line; do
			printf '%s ğŸ‘ ' "$word"
		done
		printf '\n'
	done
	printf '\b\b \n'
}
clapcmd() {
	for word in "$@"; do
		printf '%s ğŸ‘ ' "$word"
	done
	printf '\b\b \n'
}
clap() {
	if [ "$#" -eq 0 ]; then
		clapstdin
	else
		clapcmd "$@"
	fi
}
clap "$@"
