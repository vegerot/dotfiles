# 	'fd \.1 $(manpath -q | tr ":" " ") --type=file | shuf -n 1' \
# 	'OLDIFS=$IFS
# 	IFS=:
# 	for dir in $(manpath -q); do
# 		[[ -n $dir ]] && printf "%s\n" $dir/man1/* | grep -i perl
# 	done | shuf -n 1
# 	IFS=$OLDIFS'
# 	'
# 	OLDIFS=$IFS
# 	IFS=:
# 	for dir in $(manpath -q); do
# 		[[ -n $dir ]] && fd --exact-depth=2 . $dir/ | grep -i perl
# 	done | shuf -n 1
# 	IFS=$OLDIFS
